#!/sbin/openrc-run

depend() {
	need net docker
}

start() {
	sleep 2 && \
	docker load --input /media/mmcblk0p1/iotwifi.tar && \
	docker run -d --restart=unless-stopped --privileged --net host \
		-v /etc/iotwifi/wificfg.json:/cfg/wificfg.json \
	        -v /etc/wpa_supplicant/wpa_supplicant.conf:/etc/wpa_supplicant/wpa_supplicant.conf \
		cjimti/iotwifi
}
