#!/sbin/openrc-run

## LNCM post-installation script
## To be run on persistently installed SD card

depend() {
  need net
  after sshd ntpd
}

start() {
  ebegin "Starting LNCM-Box post-installation"

  echo "Logging to: /var/log/box-postinstall.log"
  # This script will only run once, to complete post-installation
  ./home/lncm/box-postinstall.sh 2>&1 | tee /var/log/box-postinstall.log

  eend $?
}
